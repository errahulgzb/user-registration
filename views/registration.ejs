<!DOCTYPE html>
<html lang="en">
<head>
 <% include partial/head %> 
</head>
<body>
<% include partial/menu %>
<div class="container">    
  <h3><%= page %></h3><br>
  


  
<% if(typeof successMsg != 'undefined' && successMsg!="") { %>
<div class="alert alert-success"><%- successMsg %></div>
<% }%>
<% if(typeof errorMsg != 'undefined' && errorMsg!="") { %>
<div class="alert alert-danger"><%- errorMsg %></div>
<% }%>
  

      <form action="/userregistration" method="POST">

    
    <div class="row">
      <div class="col-sm-8">
      <!-- Username -->
      <label for="username">Username</label>
     
        <input type="text" id="username" name="username" placeholder="Please enter username." value="<%= fulldata.username %>" class="form-control">
        <% if ( error.hasOwnProperty('username') ) { %>
        <span class="error"> <%= error.username.msg %> </span>
        <% } %>
       
      </div>
    </div>
 
   <div class="row">
      <div class="col-sm-8">
      <!-- E-mail -->
      <label for="email">E-mail</label>
     
        <input type="text" id="email" name="email" placeholder="Please enter email Id." value="<%= fulldata.email %>" class="form-control">
       <% if ( error.hasOwnProperty('email') ) { %>
        <span class="error"> <%= error.email.msg %> </span>
        <% } %>
      </div>
    </div>
 
    <div class="row">
      <div class="col-sm-8">
      <!-- Password-->
      <label for="password">Password</label>
      
        <input type="password" id="password" name="password" value="<%= fulldata.password %>" placeholder="Please enter password." class="form-control">
         <% if ( error.hasOwnProperty('password') ) { %>
        <span class="error"> <%= error.password.msg %> </span>
        <% } %>
      </div>
    </div>
 
    <div class="row">
      <div class="col-sm-8">
      <!-- Password -->
      <label for="password_confirm">Confirm Password</label>
      
        <input type="password" id="password_confirm" name="password_confirm" value="<%= fulldata.password_confirm %>" placeholder="Please enter confirm password." class="form-control">
        <% if ( error.hasOwnProperty('password_confirm') ) { %>
        <span class="error"> <%= error.password_confirm.msg %> </span>
        <% } %>
      </div>
    </div>
 <br/>
    <div class="row">
      <div class="col-sm-8">
      <!-- Button -->
     
        <button class="btn btn-success">Register</button>
      </div>
    </div>

</form>
</div>
</body>
<% include partial/script %>
</html>